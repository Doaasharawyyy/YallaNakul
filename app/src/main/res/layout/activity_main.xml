<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

        <com.spark.submitbutton.SubmitButton
            android:id="@+id/btnwelc"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:text="    Welcome     "
            android:textColor="@color/btnUser"
            app:sub_btn_background="@color/btnManager"
            app:sub_btn_duration="1000"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_alignParentBottom="true"
            app:sub_btn_line_color="@color/btnUser"
            app:sub_btn_ripple_color="@color/btnUser"
            app:sub_btn_tick_color="@color/btnManager"
            android:onClick="submitBtn"

            />






</RelativeLayout>